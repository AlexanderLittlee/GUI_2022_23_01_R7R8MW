<Window x:Class="Minecraft.RenderWindow"
        xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minecraft"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid Name="RenderCanvas">
        <glWpfControl:GLWpfControl 
            x:Name="OpenTkControl" 
            Render="OpenTkControl_OnRender">
            <glWpfControl:GLWpfControl.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </glWpfControl:GLWpfControl.OpacityMask>
        </glWpfControl:GLWpfControl>
        <Label x:Name="fpsCounter" HorizontalAlignment="Left" Margin="40,38,0,0" VerticalAlignment="Top" Background="#7F000000" Foreground="White" FontSize="14" FontFamily="Century Gothic"/>
        <Ellipse x:Name="crosshair" HorizontalAlignment="Center" Height="8" Stroke="White" VerticalAlignment="Center" Width="8" Opacity="0.7"/>
    </Grid>
</Window>
